
<div  class='w-50 form'>
  <div class="container shadow p-3 mb-5 bg-white rounded">
    <h3 class="text-center"><%= @pet.name %> <br></h3>
    <%if @pet.photo.key %>
      <div class= 'd-flex justify-content-center'>
      <%= cl_image_tag @pet.photo.key, height: 200, crop: :fill %>
      </div>

    <%end %> <br>
    <div class='shadow bg-white rounded p-3 mb-1'>
      <h5>Category:</h5> <p><%= @pet.category %></p>
    </div>
    <div class='shadow bg-white rounded p-3 mb-1'>

       <h5>Description :</h5> <p> <%= @pet.description %> </p>

    </div>
    <div class='shadow bg-white rounded p-3 mb-1'>
      <h5>Price:</h5> <p><%= @pet.price_per_hour %> â‚¬/H</p>
    </div><br><br>
    <div class='shadow bg-white rounded p-3'>
      <h5>Make your offer</h5><br>
      <%= simple_form_for [ @pet, @offer ] do |f| %>
        <%= f.input :starting_date, as: :date, html5: true%>
        <%= f.input :end_date, as: :date, html5: true%>
        <%= f.submit "Submit offer", class: "btn btn-primary" %>
      <% end %>
    </div>

      <%= link_to "go back to all the pets", pets_path ,class:'btn btn-primary'%> <br>
    </div>
  </div><br>
  <div class="container shadow p-3 mb-5 bg-white rounded">



<h2>
  <%= pluralize @pet.reviews.size, "review" %>
</h2>

<div id="reviews">
  <% if @pet.reviews.blank? %>
    Be the first to leave a review for <%= @pet.name %>
  <% else %>
    <% @pet.reviews.each do |review| %>
      <p><%= current_user %></p>
      <p><%= review.comment %></p>
      <p><%= review.rating %></p>
    <% end %>
  <% end %>
</div>

<%= simple_form_for([ @pet, @review ]) do |f| %>
  <%= f.input :comment, as: :text %>
  <%= f.input :rating, as: :integer, input_html: {min: 1, max: 5} %>
  <%= f.button :submit %>
<% end %>
